<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dios.futbolito.MainActivity">

    <ImageView
        android:id="@+id/canchita"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cancha" />

    <ImageView
        android:id="@+id/baloncito"
        android:layout_width="88dp"
        android:layout_height="83dp"
        android:layout_marginBottom="241dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/porteria"
        app:srcCompat="@mipmap/pelota" />

    <ImageView
        android:id="@+id/porteria"
        android:layout_width="125dp"
        android:layout_height="85dp"
        android:layout_marginBottom="154dp"
        app:layout_constraintBottom_toTopOf="@+id/baloncito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/porteria" />

</android.support.constraint.ConstraintLayout>
